<h1>Listing grammar_categories</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% @grammar_categories.each do |grammar_category| %>
  <tr>
    <td><%=h grammar_category.name %></td>
    <td><%= link_to 'Show', grammar_category %></td>
    <td><%= link_to 'Edit', edit_grammar_category_path(grammar_category) %></td>
    <td><%= link_to 'Destroy', grammar_category, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New grammar_category', new_grammar_category_path %>